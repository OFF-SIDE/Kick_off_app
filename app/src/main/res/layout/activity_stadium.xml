<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StadiumActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_stadium"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/pretendard_bold"
                android:hint="구장 이름"
                android:textColor="@color/primary_01"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_stadium"
                android:layout_width="0dp"
                android:layout_height="193dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/shadow_border"
                android:src="@android:drawable/ic_menu_gallery"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_stadium" />

            <ImageView
                android:id="@+id/icon_reservation"
                android:layout_width="@dimen/stadium_detail_icon_width"
                android:layout_height="@dimen/stadium_detail_icon_height"
                android:layout_marginTop="31dp"
                android:src="@drawable/ic_phone_orange"
                app:layout_constraintStart_toStartOf="@+id/icon_location"
                app:layout_constraintTop_toBottomOf="@+id/icon_location" />

            <ImageView
                android:id="@+id/icon_price"
                android:layout_width="@dimen/stadium_detail_icon_width"
                android:layout_height="@dimen/stadium_detail_icon_height"
                android:layout_marginTop="31dp"
                android:src="@drawable/ic_cash_orange"
                app:layout_constraintStart_toStartOf="@+id/icon_reservation"
                app:layout_constraintTop_toBottomOf="@+id/icon_reservation" />

            <ImageView
                android:id="@+id/icon_location"
                android:layout_width="@dimen/stadium_detail_icon_width"
                android:layout_height="@dimen/stadium_detail_icon_height"
                android:layout_marginStart="40dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_location_orange"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_stadium" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="-8dp"
                android:text="주소"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/gray_02"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/icon_location"
                app:layout_constraintTop_toTopOf="@+id/icon_location" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="예약"
                android:textColor="@color/gray_02"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/icon_reservation"
                app:layout_constraintTop_toTopOf="@+id/icon_reservation" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="이용요금"
                android:textColor="@color/gray_02"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/icon_price"
                app:layout_constraintTop_toTopOf="@+id/icon_price" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_semibold"
                android:hint="서울특별시 XX구"
                android:textColor="@color/gray_01"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_semibold"
                android:hint="02-0000-0000"
                android:textColor="@color/gray_01"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/pretendard_semibold"
                android:hint="XXXX원"
                android:textColor="@color/gray_01"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <ImageView
                android:id="@+id/line_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_price" />

            <ImageView
                android:id="@+id/line_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_comment" />

            <TextView
                android:id="@+id/text_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="9dp"
                android:hint="공지사항"
                android:fontFamily="@font/pretendard_medium"
                android:textColor="@color/gray_01"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="@+id/line_1"
                app:layout_constraintStart_toStartOf="@+id/line_1"
                app:layout_constraintTop_toBottomOf="@+id/line_1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_stadium_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="58dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/line_2"
                app:layout_constraintStart_toStartOf="@+id/line_2"
                app:layout_constraintTop_toBottomOf="@+id/line_2" />

            <Button
                android:id="@+id/button_scrap_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="즐겨찾기 등록"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_stadium" />

            <Button
                android:id="@+id/button_scrap_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="즐겨찾기 해제"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_scrap_on" />

            <ImageView
                android:id="@+id/buttonScrap"
                android:layout_width="13dp"
                android:layout_height="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_stadium"
                app:layout_constraintStart_toEndOf="@+id/text_stadium"
                app:layout_constraintTop_toTopOf="@+id/text_stadium"
                app:srcCompat="@drawable/scrap_outline" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>