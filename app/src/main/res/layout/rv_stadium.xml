<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/rv_stadium_height">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/name_stadium"
                android:layout_width="0dp"
                android:layout_height="13dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:breakStrategy="simple"
                android:ellipsize="end"
                android:hint="name"
                android:maxLines="1"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/address_stadium"
                android:layout_width="0dp"
                android:layout_height="13dp"
                android:layout_marginTop="10dp"
                android:hint="address"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/name_stadium"
                app:layout_constraintTop_toBottomOf="@+id/name_stadium" />

            <TextView
                android:id="@+id/price_stadium"
                android:layout_width="0dp"
                android:layout_height="13dp"
                android:layout_marginTop="4dp"
                android:hint="price"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/address_stadium"
                app:layout_constraintTop_toBottomOf="@+id/address_stadium" />

            <TextView
                android:id="@+id/rating_stadium"
                android:layout_width="0dp"
                android:layout_height="13dp"
                android:layout_marginTop="4dp"
                android:hint="rating"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/price_stadium"
                app:layout_constraintTop_toBottomOf="@+id/price_stadium" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>